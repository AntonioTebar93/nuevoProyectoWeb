<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>CyberCorp - {% block title %}{% endblock %}</title>

  <!-- Estilo personalizado y Bootstrap CSS -->
  <link rel="stylesheet" href="{{ absolute_url(asset('css/estilo.css')) }}">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">

  <!-- Estilo Cyberpunk -->
  <style>
    body {
      background-color: #0f0f1a;
      color: #00f7ff;
      font-family: 'Orbitron', sans-serif;
    }

    a, .nav-link {
      color: #0ff !important;
    }

    a:hover, .nav-link:hover {
      color: #ff00f7 !important;
      text-shadow: 0 0 5px #ff00f7;
    }

    header, nav {
      background: linear-gradient(to right, #1a1a2e, #16213e);
      border-color: #0ff;
      box-shadow: 0 0 10px #0ff;
    }

    .btn-outline-secondary {
      color: #0ff;
      border-color: #0ff;
    }

    .btn-outline-secondary:hover {
      background-color: #0ff;
      color: #0f0f1a;
    }

    main {
      background-color: #1a1a2e;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 20px #ff00f7;
    }

    .nav-link.active {
      font-weight: bold;
      color: #ff00f7 !important;
    }

    a.h3 {
      color: #00f7ff !important;
      text-shadow: 0 0 5px #00f7ff;
    }
  </style>

  <!-- Fuente futurista -->
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center py-3 border-bottom">
      <div>
        <a href="#" class="btn btn-outline-secondary btn-sm">Conectar</a>
      </div>
      <div class="text-center">
        <a href="#" class="h3 text-decoration-none">CyberCorp</a>
      </div>
      <div class="d-flex align-items-center">
        <a href="#" class="me-3" aria-label="Buscar">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
            stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
            <title>Buscar</title>
            <circle cx="10.5" cy="10.5" r="7.5" />
            <path d="M21 21l-5.2-5.2" />
          </svg>
        </a>
        <a class="btn btn-outline-secondary btn-sm" href="#">Acceder</a>
      </div>
    </header>

    <!-- Navbar -->
    <nav class="nav justify-content-center py-3 border-bottom">
      <a class="nav-link active" href="{{path('template_inicio')}}">Inicio</a>
      <a class="nav-link" href="{{path('formularios_inicio')}}">Formularios</a>
      <a class="nav-link" href="{{path('utilidades_inicio')}}">Utilidades</a>
      <a class="nav-link" href="{{path('formularios_inicio')}}">Doctrine ORM</a>
     
    </nav>

    <!-- Main content -->
    <main class="mt-4">
      {% block body %}
   
      {% endblock %}
    </main>
  </div>

  <!-- JS: Bootstrap desde CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
  <!-- jQuery y funciones personalizadas si las necesitas -->
  <script src="{{ absolute_url(asset('js/jquery-3.7.1.min.js')) }}"></script>
  <script src="{{ absolute_url(asset('js/funciones.js')) }}"></script>
</body>
</html>
